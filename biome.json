{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "warn",
				"useAltText": "warn",
				"useButtonType": "warn",
				"useKeyWithClickEvents": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"performance": {
				"noDelete": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noAssignInExpressions": "warn",
				"noEmptyInterface": "off",
				"noExplicitAny": "warn",
				"noConsoleLog": "warn"
			}
		}
	}
}
